
<%= javascript_include_tag 'jquery.timepicker.min' %>
<%= stylesheet_link_tag "jquery.timepicker" %>

<script>
        $(function() {
      $( "#datepicker" ).datepicker({ dateFormat: 'd MM yy' });
    });
	
  $(function() {
      $('#time').timepicker({ 'scrollDefault': '6:00pm' });
  });
	
  </script>
  

<div id="articleForm">



<%= form_for @event do |f| %>
 
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@event.errors.count, "error") %> prohibited
        this article from being created:
      </h2>
      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
 

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>


<p>
	<%= f.label :time %><br>
	<%= f.text_field :time, :id => "time", :size=>"5" %>
	<br>


	<p>
		<%= f.label :date %><br>
		<%= f.text_field :date, :id => 'datepicker' %>
	</p>
	
	
	<p>
		<%= f.label :location %><br>
		<%= f.text_field :venue, :size=>"50" %>
	</p>
  
	
	<p>
		<%= f.label :description %><br>
		<%= f.text_area :text, :class => "tinymce", :rows => 10%> 
	</p>
  
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
</div>
